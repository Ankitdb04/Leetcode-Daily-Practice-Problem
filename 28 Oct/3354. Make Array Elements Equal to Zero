class Solution {
    public int countValidSelections(int[] nums) {
        int n = nums.length;
        long total = 0;
        for (int v : nums) total += v;

        long prefix = 0;
        int ans = 0;

        for (int i = 0; i < n; i++) {
            // current element
            if (nums[i] == 0) {
                long left = prefix;
                long right = total - prefix;
                if (left == right) {
                    ans += 2;
                } else if (Math.abs(left - right) == 1) {
                    ans += 1;
                }
            }
            prefix += nums[i];
        }

        return ans;
    }
}
