import java.util.*;

class Solution {
    public int findSmallestInteger(int[] nums, int value) {
        // count occurrences of each remainder 0..value-1
        int[] cnt = new int[value];
        for (int x : nums) {
            int r = ((x % value) + value) % value; // safe for negative x
            cnt[r]++;
        }

        // try to build 0,1,2,... greedily
        for (int i = 0; i <= nums.length; ++i) {
            int r = i % value;
            if (cnt[r] == 0) return i;   // can't form i -> it's the MEX
            cnt[r]--;                    // use one element of residue r
        }
        // If we used up all nums (rarely reached), MEX is n
        return nums.length;
    }
}
