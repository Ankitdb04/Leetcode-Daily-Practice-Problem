class Solution {
    public int numSub(String s) {
        final long MOD = 1_000_000_007L;
        long cur = 0;   // consecutive '1's ending here
        long ans = 0;
        for (int i = 0; i < s.length(); ++i) {
            if (s.charAt(i) == '1') {
                cur += 1;
                ans = (ans + cur) % MOD;
            } else {
                cur = 0;
            }
        }
        return (int) ans;
    }
}
